<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrimaryButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="PrimaryButton2" parent="Theme.AppCompat">
        <item name="colorButtonNormal">#ba2d2d</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="PrimaryButtonGreen" parent="Theme.AppCompat">
        <item name="colorButtonNormal">#50c878</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="PrimaryButtonWhite" parent="Theme.AppCompat">
        <item name="colorButtonNormal">#ffffff</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>
