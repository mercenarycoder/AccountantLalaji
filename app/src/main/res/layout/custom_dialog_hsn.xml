<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_dialog"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="20dp"
                android:id="@+id/input_layout_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                >

                <EditText
                    android:id="@+id/HSNCodeET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="HSN Code *"
                    android:inputType="numberDecimal"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                >

                <EditText
                    android:id="@+id/HSNDescET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="HSN Description"
                    />
            </android.support.design.widget.TextInputLayout>


            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/HSNPercent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="HSN Percent % *"
                app:met_floatingLabel="normal"
                app:met_floatingLabelText="HSN Percent %"
                app:met_floatingLabelTextColor="#ffffff"
                app:met_floatingLabelTextSize="13dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                ></com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner>





        </LinearLayout>
    </ScrollView>
</LinearLayout>