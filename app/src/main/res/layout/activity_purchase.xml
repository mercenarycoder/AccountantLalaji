<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayoutSaleList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Purchase">


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/saleRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarMainActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/toolbar_color"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:id="@+id/menu"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="New Purchase"
                        android:textColor="#ffffff"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/date_tb_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="99-99-9999"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:layout_marginRight="20dp"
                        />

                </LinearLayout>


            </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:textSize="12dp"
                            android:layout_marginTop="20dp"
                            android:text="Customer Name"/>

                        <LinearLayout

                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10"
                            >


                            <AutoCompleteTextView
                                android:layout_weight="8"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:completionThreshold="1"
                                android:hint="Search Vendor"
                                android:id="@+id/count"
                                />

                            <LinearLayout
                                android:layout_weight="2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/newcustomerSale"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@mipmap/newuser"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="4dp"
                                    android:tint="#95A5A6"
                                    android:padding="10dp"

                                    />

                            </LinearLayout>



                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/mobileLL"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:visibility="gone"
                            android:layout_marginLeft="10dp"
                            >

                            <ImageView
                                android:tint="#95A5A6"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@mipmap/smartphone"/>

                            <TextView
                                android:id="@+id/cusMobile"
                                android:layout_marginTop="2dp"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                />

                        </LinearLayout>

                        <View
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="#BDC3C7">

                        </View>


                        <LinearLayout
                            android:id="@+id/saleLL"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >

                            <LinearLayout
                                android:paddingTop="5dp"
                                android:paddingRight="10dp"
                                android:paddingLeft="10dp"
                                android:background="#ffedf5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10"
                                >


                                <AutoCompleteTextView
                                    android:layout_weight="8"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:completionThreshold="1"
                                    android:hint="Barcode or Item Name"
                                    android:id="@+id/barCode"
                                    />

                                <LinearLayout

                                    android:layout_weight="2"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center">

                                    <ImageView
                                        android:id="@+id/barcodeScan"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@mipmap/barcode"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="0dp"
                                        android:tint="#95A5A6"


                                        />

                                </LinearLayout>



                            </LinearLayout>

                            <TextView
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Selected Products"
                                android:textSize="12dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginLeft="5dp"
                                />

                            <android.support.v7.widget.RecyclerView
                                android:layout_marginBottom="50dp"
                                android:id="@+id/recyclerView_Select_Product"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:nestedScrollingEnabled="true">
                            </android.support.v7.widget.RecyclerView>

                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/menu_tab_salelist"
                    android:layout_height="45dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:textSize="10dp"
                            android:textColor="#ffffff"
                            />
                        <TextView
                            android:id="@+id/grandTotalTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹ 00"
                            android:textColor="#ffffff"
                            />
                    </LinearLayout>


                    <Button
                        android:id="@+id/continueBTN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:theme="@style/PrimaryButtonWhite"
                        android:textSize="13dp"
                        android:layout_alignParentRight="true"
                        android:textColor="#000000"
                        android:text="Continue"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"

                        />


                    <!--<com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                        android:id="@+id/paymentS"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:hint="Payment Mode"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelText="Payment Mode"
                        app:met_floatingLabelTextColor="#ffffff"
                        app:met_floatingLabelTextSize="13dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"


                        />-->

                </RelativeLayout>


            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view_SaleList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginEnd="-65dp"
        android:layout_marginRight="-65dp"
        android:fitsSystemWindows="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <include
                    android:id="@+id/dm"
                    layout="@layout/drawer_menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></include>

            </LinearLayout>

        </ScrollView>

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>


